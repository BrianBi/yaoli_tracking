<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="tracking" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Tracking</label>
            <tab>sendorder</tab>
            <resource>Yaoli_Tracking::tracklist</resource>
            <group id="general" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Tracking Configuration</label>
                <field id="enable" translate="label comment" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Tracking Enable</label>
                    <comment>Enable OR Disable Tracking</comment>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>

                <field id="cookie_name" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Cookie Name</label>
                </field>

                <field id="cookie_safe_key" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Cookie Safe Key</label>
                </field>

                <field id="cookie_expired_s" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Cookie Expired Seconds</label>
                </field>
            </group>
        </section>
    </system>
</config>